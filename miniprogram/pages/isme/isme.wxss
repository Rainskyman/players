/* pages/profile/childCpns/w-header/w-header.wxss */
.header {
  position: relative;
  display: flex;
  background: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}

.avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: #f2f2f2;
  vertical-align: middle;
}

.login-info {
  vertical-align: middle;
  margin-left: 30rpx;
}

.login-info .login {
  font-size: 36rpx;
  margin-top: 18rpx;
}

.login-info .phone {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.phone image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  bottom: 4rpx;
}

.arrow {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}

.arrow image {
  width: 60rpx;
  height: 60rpx;
}




/* ================================ */
/* pages/profile/childCpns/w-info/w-info.wxss */
.info {
  display: flex;
  font-size: 28rpx;
  text-align: center;
  justify-content: space-between;
  background: #f8f8f8;
}

.info-item {
  width: 33%;
  background: #fff;
  padding: 50rpx 0;
}

.count {
  color: #ff5f3e;
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.5;
}


/* ================================================================= */
/* pages/profile/childCpns/w-list-view/w-list-view.wxss */
.list-view {
  border-top: 36rpx solid #f8f8f8;
}

.list-item {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  font-size: 32rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #f8f8f8;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.list-item text {
  vertical-align: middle;
  margin-left: 16rpx;
}



.dashang{
  position: absolute;
  width: 100%;
  height:100%;
}
.dashang image{
  width: 100%;
  height: 100%
}