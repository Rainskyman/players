page {
  height: 100%;
  width: 100%;
}

.guessbox {
  width: 100%;
  height: 100%;
  background: white;
}

/* 头像和问题 */

.question {
  width: 100%;
  height: 8%;
  background: #f0efef;
  display: flex;
  justify-content: center;
  align-items: center;
}

.userheader {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.question text {
  margin: auto 10rpx auto 20rpx;
}

/* 头像和问题 */

/* 开始游戏按钮 */

.startbox {
  display: flex;
  justify-items: flex-start;
}

.startbox button {
  color: red;
}

/* 开始游戏按钮 */

/* 画板 */

.palette {
  width: 100%;
  height: 56%;
  margin-top: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #000;
}

canvas {
  width: 100%;
  height: 100%;
  /* border: 2rpx solid #000000; *//* border-radius: 3rpx; */
}

/* 画笔大小 */

.boxone {
  width: 100%;
  height: 8%;
  background: #ececec;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  border-top: 1px solid #000000;
}

.pensize {
  height: 10%;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.pensize text {
  margin-left: 25rpx;
  font-size: 0.75em;
  color: gray;
}

/* 画笔大小 */

/* 颜色盒子 */

.colorbox {
  height: auto;
  background: #ebebeb;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;

}

.color-box {
  display: inline-block;
  width: 60rpx;
  height: 100%;
  margin: 0 10rpx 0 10rpx;
}

scroll-view {
  width: 80%;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  align-content: flex-end;
}

.color-slecotr-left {
  width: 0;
  height: 0;
  margin-left: 3%;
  border-top: 25rpx solid transparent;
  border-right: 30rpx solid #c9c8c8;
  border-bottom: 25rpx solid transparent;
}

/* 右边的箭头 */

.color-slecotr-right {
  width: 0;
  height: 0;
  margin-right: 3%;
  border-top: 25rpx solid transparent;
  border-left: 30rpx solid #c9c8c8;
  border-bottom: 25rpx solid transparent;
}

/* 颜色盒子 */

/* 工具操作 */

.drawtools {
  width: 100%;
  background: #ebebeb;
}

.tool-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tool-container .icon-text {
  width: 20%;
  margin-left: 2rpx;
}



/* 分享 */
.sharebox{
  margin-top: 10rpx;
}
.sharebox button{
  width: 100%;
  background: #be5fdd;
}
/* 分享 */




