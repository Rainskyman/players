}
.w{
  position: absolute;
  top: 25rpx;
  right: 25rpx;
  color: #FFBBFF;
  font-size:36rpx;
}
.b{
  position: absolute;
  left: 25rpx;
  bottom: 25rpx;
  color: 	#EE00EE;
  font-size:36rpx;
}
.d{
  position: absolute;
    right: 25rpx;
  bottom: 25rpx;
