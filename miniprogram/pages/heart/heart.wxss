}

.rotatePointer {
  height: 12rpx;
  position: absolute;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #000;
}

.leftpt {
  width: 50%;
  height: 100%;
  background: pink;
}

.rightpt {
  width: 50%;
  height: 100%;
  background: white;
}

