.rotatecircle {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  background-image: url('https://6d6f-mooniessky-roneg-1301466912.tcb.qcloud.la/heartbg.jpg?sign=74a44e3fc668cec6a7fd5c72f54a2df5&t=1584088978');
